@model IEnumerable<CarRentalManagement.Models.User>

@{
    ViewData["Title"] = "Users List";
}

<h2>Users List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Create New User</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>UserId</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Nationality</th>
            <th>Email</th>
            <th>Phone</th>
            <th>ID Type</th>
            <th>ID Number</th>
            <th>Username</th>
            <th>Password</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserID</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Nationality</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@(string.IsNullOrEmpty(user.NationalID) ? "Passport" : "NIC")</td>
                <td>@(string.IsNullOrEmpty(user.NationalID) ? user.PassportNumber : user.NationalID)</td>
                <td>@user.Username</td>
                <td>••••••••</td>
                <td>@user.Role</td>
            </tr>
        }
    </tbody>
</table>
