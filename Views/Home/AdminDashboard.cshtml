@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4 fw-bold text-primary">
    <i class="bi bi-speedometer2 me-2"></i> Admin Dashboard
</h2>

<div class="row g-4">
    <!-- Total Cars -->
    <div class="col-md-4">
        <div class="card shadow-lg border-0 rounded-4 bg-gradient bg-primary text-white dashboard-card">
            <div class="card-body d-flex align-items-center">
                <div class="me-3">
                    <i class="bi bi-car-front-fill fs-1"></i>
                </div>
                <div>
                    <h6 class="card-title text-uppercase opacity-75">Total Cars</h6>
                    <h2 class="fw-bold mb-0">@ViewBag.TotalCars</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Available Cars -->
    <div class="col-md-4">
        <div class="card shadow-lg border-0 rounded-4 bg-gradient bg-success text-white dashboard-card">
            <div class="card-body d-flex align-items-center">
                <div class="me-3">
                    <i class="bi bi-check-circle-fill fs-1"></i>
                </div>
                <div>
                    <h6 class="card-title text-uppercase opacity-75">Available Cars</h6>
                    <h2 class="fw-bold mb-0">@ViewBag.AvailableCars</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Total Bookings -->
    <div class="col-md-4">
        <div class="card shadow-lg border-0 rounded-4 bg-gradient bg-dark text-white dashboard-card">
            <div class="card-body d-flex align-items-center">
                <div class="me-3">
                    <i class="bi bi-calendar-check-fill fs-1"></i>
                </div>
                <div>
                    <h6 class="card-title text-uppercase opacity-75">Total Bookings</h6>
                    <h2 class="fw-bold mb-0">@ViewBag.TotalBookings</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .dashboard-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .dashboard-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 0.8rem 1.5rem rgba(0, 0, 0, 0.25);
    }
</style>
