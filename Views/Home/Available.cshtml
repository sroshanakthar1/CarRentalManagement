@model IEnumerable<CarRentalManagement.Models.Car>

@{
    ViewData["Title"] = "Available Cars";
}

<h2 class="mb-4">Available Cars</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center">
        No cars available for the selected dates.
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var car in Model)
        {
            <div class="col-sm-6 col-md-4">
                <div class="card shadow-lg">
                    <img src="@car.ImageUrl"
                         alt="@car.CarName"
                         style="width:300px; height:200px; object-fit:cover; margin:auto; border-radius:8px;"
                         onerror="this.src='/images/car/default.png'" />

                    <div class="card-body">
                        <h5 class="card-title">@car.CarName (@car.CarModel)</h5>
                        <ul class="list-unstyled">
                            <li>Transmission: @car.Transmission</li>
                            <li>Seats: @car.SeatingCapacity</li>
                            <li>Fuel: @car.FuelType</li>
                        </ul>
                        <p class="fw-bold text-warning">Price/Day: @car.PricePerDay.ToString("C")</p>
                        @if (car.IsAvailable)
                        {
                            <span class="badge bg-success">Available</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Booked</span>
                        }
                    </div>

                    <div class="card-footer d-flex justify-content-between">
                        <a asp-controller="CustomerProfile" asp-action="Details" asp-route-id="@car.CarID"
                           class="btn btn-motoflex">View</a>

                        <a asp-controller="Bookings"
                           asp-action="Create"
                           asp-route-carId="@car.CarID"
                           asp-route-pickupDate="@DateTime.Today.ToString("yyyy-MM-dd")"
                           asp-route-returnDate="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")"
                           class="btn btn-motoflex">
                            Book Now
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
<style>
    /* Custom Buttons */
    .btn-motoflex {
        background: #000;
        border: 2px solid #f5c518;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        color: #f5c518;
        transition: all 0.3s ease-in-out;
        text-align: center;
    }

        .btn-motoflex:hover {
            background: #f5c518;
            color: #000;
            transform: translateY(-2px) scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }

    .card-footer .btn {
        flex: 1;
        margin: 0 3px;
    }
</style>

