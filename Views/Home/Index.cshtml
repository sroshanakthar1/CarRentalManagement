@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Welcome to CRMS";
}

<!-- Google Font -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #f8f9fa;
    }

    .card {
        border-radius: 15px;
        transition: transform 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }

    .btn-primary {
        background-color: #0d6efd;
        border: none;
    }

    .btn-outline-secondary {
        border-color: #6c757d;
        color: #6c757d;
    }

    h1, h2 {
        font-weight: 700;
    }
</style>

<div class="container py-5">
    <!-- Hero Section -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Welcome to Car Rental Management System</h1>
        <p class="lead">Rent your dream car quickly and easily!</p>

        @* Only show Login/Register if Role is null or Customer *@
        @{
            var role = HttpContextAccessor.HttpContext.Session.GetString("Role");
        }
        @if (string.IsNullOrEmpty(role) || role == "Customer")
        {
            <a class="btn btn-primary btn-lg px-4" asp-controller="Account" asp-action="Login">Login</a>
            <a class="btn btn-outline-secondary btn-lg px-4 ms-2" asp-controller="Account" asp-action="Register">Register</a>
        }
    </div>

    <!-- Featured Cars -->
    <h2 class="mb-4 text-center">Featured Cars</h2>
    <div class="row">
        <!-- Car 1 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <img src="~/Images/Cars/car1.webp" class="card-img-top" alt="Toyota Corolla">
                <div class="card-body">
                    <h5 class="card-title">Toyota Corolla</h5>
                    <p class="card-text">Comfortable sedan with great mileage. Perfect for city rides.</p>
                </div>
                <div class="card-footer text-end">
                    <span class="fw-bold">$40/day</span>
                </div>
            </div>
        </div>

        <!-- Car 2 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <img src="~/Images/Cars/car2.webp" class="card-img-top" alt="Honda Civic">
                <div class="card-body">
                    <h5 class="card-title">Honda Civic</h5>
                    <p class="card-text">Sporty and reliable. Enjoy smooth driving with style.</p>
                </div>
                <div class="card-footer text-end">
                    <span class="fw-bold">$55/day</span>
                </div>
            </div>
        </div>

        <!-- Car 3 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <img src="~/Images/Cars/car3.webp" class="card-img-top" alt="BMW 3 Series">
                <div class="card-body">
                    <h5 class="card-title">BMW 3 Series</h5>
                    <p class="card-text">Luxury experience for long trips and business rides.</p>
                </div>
                <div class="card-footer text-end">
                    <span class="fw-bold">$100/day</span>
                </div>
            </div>
        </div>
    </div>
</div>
