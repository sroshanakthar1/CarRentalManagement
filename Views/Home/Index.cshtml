@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Welcome to CRMS";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<style>
    body {
        margin: 0; /* Removes default margin */
        padding: 0; /* Removes default padding */
        font-family: "Poppins", sans-serif;
        background: linear-gradient(135deg, #f5f5f5, #eaeaea);
        min-height: 100vh;
        overflow-x: hidden;
    }

    .hero {
        text-align: center;
        padding: 6% 5%;
        border-radius: 20px;
        margin-bottom: 5%;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: hidden;
        background-size: cover;
        background-position: center;
        height: 500px; /* Adjust as needed */
        transition: background-image 1s ease-in-out;
        /* Initial background image so text/buttons show immediately */
        background-image: url('/Images/Homepage/hero1.jpeg');
    }
    .hero-content {
        position: relative;
        z-index: 2;
        top: 50%;
        transform: translateY(-50%);
        /* color: #111; */ /* Remove this line to not force dark text/buttons */
    }
    /* Buttons */
    .btn-primary {
        background: #000;
        border: 2px solid #f5c518;
        border-radius: 12px;
        padding: 12px 28px;
        font-weight: 600;
        color: #f5c518;
        transition: all 0.3s ease-in-out;
    }

        .btn-primary:hover {
            background: #f5c518;
            color: #000;
            transform: translateY(-2px) scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }

    .btn-outline-secondary {
        border: 2px solid #444;
        border-radius: 12px;
        padding: 12px 28px;
        font-weight: 600;
        color: #444;
        transition: all 0.3s;
    }

        .btn-outline-secondary:hover {
            background-color: #444;
            color: #fff;
            transform: translateY(-2px) scale(1.03);
        }

    /* Cards */
    .card {
        border-radius: 18px;
        border: 1px solid #f5c51820;
        transition: transform 0.3s, box-shadow 0.3s;
        background: #fff;
        height: 100%;
        overflow: hidden;
    }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.25);
            border-color: #f5c518;
        }

        .card img {
            transition: transform 0.3s ease;
            object-fit: cover;
            width: 100%;
            max-height: 220px;
            border-top-left-radius: 18px;
            border-top-right-radius: 18px;
        }

        .card:hover img {
            transform: scale(1.05);
        }

    .card-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #111;
    }

    .card-text {
        font-size: 1rem;
        color: #555;
        line-height: 1.5;
    }

    .card-footer {
        background: transparent;
        border-top: none;
    }

    .price-tag {
        font-size: 1.3rem;
        color: #f5c518;
        font-weight: 700;
    }
</style>

<!-- Hero Section -->
<!-- Hero Section -->
<section class="hero">
    <div class="hero-content">
        <h1>Only 3 Steps Rent</h1>
        <p>Drive Your Dreams</p>
        <a class="btn btn-motoflex btn-lg" asp-controller="Bookings" asp-action="Create">
            <i class="bi bi-plus-circle me-1"></i> Book a Car
        </a>
    </div>
</section>


<script>
    const hero = document.querySelector('.hero');
    const images = [
        '/Images/Homepage/hero01.jpeg',
        '/Images/Homepage/hero2.jpeg',
        '/Images/Homepage/hero04.jpeg'
    ];
    let current = 0;

    function changeHeroImage() {
        current = (current + 1) % images.length;
        hero.style.backgroundImage = `url('${images[current]}')`;
    }

    // Initial image
    hero.style.backgroundImage = `url('${images[0]}')`;

    // Change every 5 seconds
    setInterval(changeHeroImage, 5000);
</script>



    <h2 class="mb-4">Available Cars</h2>
    <div class="row g-4">
        @foreach (var car in Model)
        {
            <div class="col-sm-6 col-md-4">
                <div class="card shadow-lg" style="width: 18rem; margin:auto;">

                    <!-- Car Image -->
                    <img src="@car.ImageUrl"
                         class="card-img-top"
                         alt="@car.CarName"
                         style="height:200px; object-fit:cover;"
                         onerror="this.src='/images/car/default.png'" />

                    <!-- Card Body -->
                    <div class="card-body">
                        <h5 class="card-title">@car.CarName (@car.CarModel)</h5>

                        <p class="card-text mb-2">
                            
                            <strong>Seats:</strong> @car.SeatingCapacity <br />
                      
                        </p>

                        <p class="fw-bold text-warning mb-2">
                            Price/Day: @car.PricePerDay.ToString("C")
                        </p>

                        @if (car.IsAvailable)
                        {
                            <span class="badge bg-success mb-3">Available</span>
                        }
                        else
                        {
                            <span class="badge bg-danger mb-3">Booked</span>
                        }
                        <div class="d-flex justify-content-between">
                        <a asp-controller="CustomerProfile"
                           asp-action="Details"
                           asp-route-id="@car.CarID"
                           class="btn btn-primary">
                            View
                        </a>
                        <a asp-controller="Bookings"
                           asp-action="Create"
                           asp-route-carId="@car.CarID"
                           asp-route-pickupDate="@DateTime.Today.ToString("yyyy-MM-dd")"
                           asp-route-returnDate="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")"
                           class="btn btn-primary">
                            Book Now
                        </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

<footer class="footer py-4">
    <div class="container">
        <div class="row align-items-center">
            <!-- Company Info -->
            <div class="col-md-4 text-center text-md-start">
                <h4 class="fw-bold mb-1">MotoFlex</h4>
                <p class="mb-0">Your trusted partner for premium car rentals</p>
                <p class="mb-0">📧 contact@motoflex.com | 📞 +94 77 123 4567</p>
            </div>

            <!-- Navigation Links -->
            <div class="col-md-4 text-center my-2 my-md-0">
                <a asp-controller="Home" asp-action="Index" class="footer-link">Home</a> |
                <a asp-controller="Home" asp-action="Privacy" class="footer-link">Privacy Policy</a> |
                <a asp-controller="Home" asp-action="Terms" class="footer-link">Terms & Conditions</a>
            </div>

            <!-- Social Icons & Payment -->
            <div class="col-md-4 text-center text-md-end">
                <!-- Social -->
                <a href="https://www.facebook.com" target="_blank" class="social-link me-2">
                    <i class="bi bi-facebook"></i>
                </a>
                <a href="https://www.youtube.com" target="_blank" class="social-link me-2">
                    <i class="bi bi-youtube"></i>
                </a>
                <a href="https://www.instagram.com" target="_blank" class="social-link me-2">
                    <i class="bi bi-instagram"></i>
                </a>

                <!-- Payment -->
                <img src="/Images/payments/download.png" alt="Visa" class="mx-2" />
            </div>
        </div>

        <!-- Bottom Row: Copyright -->
        <div class="row mt-3">
            <div class="col text-center">
                <p class="mb-0" style="font-size:0.9rem; color:#aaa;">
                    © @DateTime.Now.Year MotoFlex. All rights reserved.
                </p>
            </div>
        </div>
    </div>
</footer>




<style>
    .footer {
        background: #111;
        color: #f5c518;
        border-top: 3px solid #f5c518;
        margin-top: 0 !important; /* Remove gap above footer */
    }

    .footer-link {
        color: #f5c518;
        text-decoration: none;
        margin: 0 5px;
        font-weight: 500;
        transition: color 0.3s;
    }

        .footer-link:hover {
            color: #fff;
        }

    .social-link {
        color: #f5c518;
        font-size: 1.3rem;
        transition: color 0.3s;
    }

        .social-link:hover {
            color: #fff;
        }

    .footer img {
        height: 30px;
        filter: grayscale(20%);
        transition: transform 0.3s;
    }

        .footer img:hover {
            transform: scale(1.1);
        }

</style>

