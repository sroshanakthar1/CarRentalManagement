@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Welcome to CRMS";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<style>
    body {
        font-family: "Poppins", sans-serif;
        background: linear-gradient(135deg, #f5f5f5, #eaeaea);
        min-height: 100vh;
        overflow-x: hidden;
    }

    /* Hero Section */
    .hero {
        text-align: center;
        padding: 6% 5%;
        background: linear-gradient(135deg, #1a1a1a, #0f0f0f);
        color: #f5c518;
        border-radius: 20px;
        margin-bottom: 5%;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3);
        position: relative;
        overflow: hidden;
    }

        .hero::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.02);
            pointer-events: none;
        }

        .hero h1 {
            font-size: clamp(2rem, 5vw, 3rem);
            font-weight: 700;
            color: #f5c518;
            z-index: 2;
            position: relative;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.5);
        }

        .hero p {
            font-size: clamp(1rem, 2.5vw, 1.2rem);
            margin-bottom: 20px;
            color: #e0e0e0;
        }

    /* Buttons */
    .btn-primary {
        background: #000;
        border: 2px solid #f5c518;
        border-radius: 12px;
        padding: 12px 28px;
        font-weight: 600;
        color: #f5c518;
        transition: all 0.3s ease-in-out;
    }

        .btn-primary:hover {
            background: #f5c518;
            color: #000;
            transform: translateY(-2px) scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }

    .btn-outline-secondary {
        border: 2px solid #444;
        border-radius: 12px;
        padding: 12px 28px;
        font-weight: 600;
        color: #444;
        transition: all 0.3s;
    }

        .btn-outline-secondary:hover {
            background-color: #444;
            color: #fff;
            transform: translateY(-2px) scale(1.03);
        }

    /* Cards */
    .card {
        border-radius: 18px;
        border: 1px solid #f5c51820;
        transition: transform 0.3s, box-shadow 0.3s;
        background: #fff;
        height: 100%;
        overflow: hidden;
    }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.25);
            border-color: #f5c518;
        }

        .card img {
            transition: transform 0.3s ease;
            object-fit: cover;
            width: 100%;
            max-height: 220px;
            border-top-left-radius: 18px;
            border-top-right-radius: 18px;
        }

        .card:hover img {
            transform: scale(1.05);
        }

    .card-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #111;
    }

    .card-text {
        font-size: 1rem;
        color: #555;
        line-height: 1.5;
    }

    .card-footer {
        background: transparent;
        border-top: none;
    }

    .price-tag {
        font-size: 1.3rem;
        color: #f5c518;
        font-weight: 700;
    }
</style>

<!-- Hero Section -->
<section class="hero">
    <h1>Drive Your Dreams</h1>
    <p>Experience premium car rentals like never before</p>
    <a class="btn btn-primary btn-lg" asp-controller="Bookings" asp-action="Create">
        <i class="bi bi-plus-circle me-1"></i> Book a Car
    </a>
</section>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold" style="font-size:clamp(1.5rem,4vw,2.5rem); color:#111;">
            Welcome to <span style="color:#f5c518;">MotoFlex</span>
        </h1>
        <p class="text-muted" style="font-size:clamp(1rem,2.5vw,1.2rem);">Rent your dream car with style and security</p>

        @{
            var role = HttpContextAccessor.HttpContext.Session.GetString("Role");
        }
        @if (string.IsNullOrEmpty(role) || role == "Customer")
        {
            <a class="btn btn-primary me-2" asp-controller="Account" asp-action="Login">Login</a>
            <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="Register">Register</a>
        }
    </div>

    <div class="row g-4">
        <!-- Car 1 -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <img src="~/Images/Cars/car3.webp" alt="Toyota Corolla" />
                <div class="card-body">
                    <h5 class="card-title">Toyota Corolla</h5>
                    <p class="card-text">Comfortable sedan with great mileage. Perfect for city rides.</p>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <span class="price-tag">$40/day</span>
                    <a class="btn btn-primary btn-sm" asp-controller="Bookings" asp-action="Create">Book Now</a>
                </div>
            </div>
        </div>

        <!-- Car 2 -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <img src="~/Images/Cars/car2.webp" alt="Honda Civic" />
                <div class="card-body">
                    <h5 class="card-title">Honda Civic</h5>
                    <p class="card-text">Sporty and reliable. Enjoy smooth driving with style.</p>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <span class="price-tag">$55/day</span>
                    <a class="btn btn-primary btn-sm" asp-controller="Bookings" asp-action="Create">Book Now</a>
                </div>
            </div>
        </div>

        <!-- Car 3 -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <img src="~/Images/Cars/car1.webp" alt="BMW 3 Series" />
                <div class="card-body">
                    <h5 class="card-title">BMW 3 Series</h5>
                    <p class="card-text">Luxury experience for long trips and business rides.</p>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <span class="price-tag">$100/day</span>
                    <a class="btn btn-primary btn-sm" asp-controller="Bookings" asp-action="Create">Book Now</a>
                </div>
            </div>
        </div>
    </div>
</div>
