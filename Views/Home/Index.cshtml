@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Welcome to CRMS";
}

<style>
    body {
        font-family: "Times New Roman", Times, serif;
        background: linear-gradient(135deg, #f0f4f9, #d9e4ec);
        min-height: 100vh;
    }

    h1, h2 {
        font-weight: 700;
        color: #222;
    }

    .card {
        border-radius: 20px;
        overflow: hidden;
        border: none;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
        }

        .card img {
            transition: transform 0.3s ease;
        }

        .card:hover img {
            transform: scale(1.05);
        }

    .btn-primary {
        background: linear-gradient(135deg, #007bff, #0056b3);
        border: none;
        border-radius: 10px;
        padding: 10px 25px;
        font-weight: 600;
    }

    .btn-outline-secondary {
        border: 2px solid #6c757d;
        border-radius: 10px;
        padding: 10px 25px;
        font-weight: 600;
        color: #6c757d;
    }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: #fff;
        }

    .card-footer {
        background: #fff;
        border-top: none;
    }

    .price-tag {
        font-size: 1.2rem;
        color: #0d6efd;
        font-weight: 700;
    }
</style>

<!-- Hero Section -->
<section class="hero">
    <div class="hero-content">
        <h1>Drive Your Dreams</h1>
        <p>Find the perfect car and book it instantly with CRMS</p>
        <a class="btn btn-primary btn-lg" asp-controller="Bookings" asp-action="Create">
            <i class="bi bi-plus-circle me-1"></i> Book a Car
        </a>
    </div>
</section>

<div class="container py-5">
    <!-- Hero Section -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Welcome to <span style="color:#0d6efd;">MotoFlex</span></h1>
        <p class="lead text-muted">Rent your dream car quickly and easily!</p>

        @* Only show Login/Register if Role is null or Customer *@
        @{
            var role = HttpContextAccessor.HttpContext.Session.GetString("Role");
        }
        @if (string.IsNullOrEmpty(role) || role == "Customer")
        {
            <a class="btn btn-primary btn-lg px-4" asp-controller="Account" asp-action="Login">Login</a>
            <a class="btn btn-outline-secondary btn-lg px-4 ms-2" asp-controller="Account" asp-action="Register">Register</a>
        }
    </div>

   
    <div class="row">
        <!-- Car 1 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <img src="~/Images/Cars/car3.webp" class="card-img-top" alt="Toyota Corolla">
                <div class="card-body">
                    <h5 class="card-title">Toyota Corolla</h5>
                    <p class="card-text text-muted">Comfortable sedan with great mileage. Perfect for city rides.</p>
                </div>
                <div class="card-footer text-end">
                    <span class="price-tag">$40/day</span>
                </div>
            </div>
        </div>

        <!-- Car 2 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <img src="~/Images/Cars/car2.webp" class="card-img-top" alt="Honda Civic">
                <div class="card-body">
                    <h5 class="card-title">Honda Civic</h5>
                    <p class="card-text text-muted">Sporty and reliable. Enjoy smooth driving with style.</p>
                </div>
                <div class="card-footer text-end">
                    <span class="price-tag">$55/day</span>
                </div>
            </div>
        </div>

        <!-- Car 3 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <img src="~/Images/Cars/car1.webp" class="card-img-top" alt="BMW 3 Series">
                <div class="card-body">
                    <h5 class="card-title">BMW 3 Series</h5>
                    <p class="card-text text-muted">Luxury experience for long trips and business rides.</p>
                </div>
                <div class="card-footer text-end">
                    <span class="price-tag">$100/day</span>
                </div>
            </div>
        </div>
    </div>
</div>
