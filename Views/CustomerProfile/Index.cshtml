@model IEnumerable<CarRentalManagement.Models.Car>
@{
    ViewData["Title"] = "Available Cars";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="row">
    @foreach (var car in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@car.ImageUrl"
                     class="card-img-top"
                     alt="@car.CarName"
                     onerror="this.src='/images/car/default.png'" />

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@car.CarName</h5>
                    <p class="card-text">@car.SeatingCapacity seats • @car.Transmission • @car.FuelType</p>
                    <p class="fw-bold">@car.PricePerDay.ToString("C") per day</p>

                    <a asp-action="Details" asp-route-id="@car.CarID"
                       class="mt-auto btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
