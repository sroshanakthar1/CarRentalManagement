@model IEnumerable<CarRentalManagement.Models.Customer>

<h2>Customer List</h2>
<a asp-action="Create" class="btn btn-primary mb-2">Add Customer</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Driving License</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FullName</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>@customer.DrivingLicense</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@customer.CustomerId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
