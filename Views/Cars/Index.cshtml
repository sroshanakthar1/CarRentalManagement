@model IEnumerable<CarRentalManagement.Models.Car>
@{
    ViewData["Title"] = "Cars";
}

<div class="row g-4">

    <div class="col-md-4">
        <a href="@Url.Action("Index", new { filter = "booked" })" style="text-decoration:none;">
        <div class="card text-white bg-danger shadow-sm rounded-3">
            <div class="card-body d-flex align-items-center">
                <div class="me-3">
                    <i class="bi bi-calendar-check-fill fs-1"></i>
                </div>
                <div>
                    <h6 class="card-title text-uppercase">Booked Cars</h6>
                    <h2 class="card-text fw-bold">@ViewBag.BookedCars</h2>
                </div>
            </div>
        </div>
        </a>
    </div>
    <div class="col-md-4">
        <a href="@Url.Action("Index", new { filter = "available" })" style="text-decoration:none;">
        <div class="card text-white bg-success shadow-sm rounded-3">
            <div class="card-body d-flex align-items-center">
                <div class="me-3">
                    <i class="bi bi-check-circle-fill fs-1"></i>
                </div>
                <div>
                    <h6 class="card-title text-uppercase">Available Cars</h6>
                    <h2 class="card-text fw-bold">@ViewBag.AvailableCars</h2>
                </div>
            </div>
        </div>
        </a>
    </div>
    
    <div class="col-md-4">
        <a href="@Url.Action("Index", new { filter = "all" })" style="text-decoration:none;">
        <div class="card text-white bg-primary shadow-sm rounded-3">
            <div class="card-body d-flex align-items-center">
                <div class="me-3">
                    <i class="bi bi-car-front-fill fs-1"></i>
                </div>
                <div>
                    <h6 class="card-title text-uppercase">Total Cars</h6>
                    <h2 class="card-text fw-bold">@ViewBag.TotalCars</h2>
                </div>
            </div>
        </div>
        </a>
    </div>
</div>
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Cars</h2>
    <a class="btn btn-success" asp-action="Create">New Car</a>
</div>

<table class="table table-striped align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Model</th>
            <th>Transmission</th>
            <th>Fuel Type</th>
            <th>Seating Capacity</th>
            <th>Price / Day</th>
            <th>Availability</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.CarName</td>
                <td>@car.CarModel</td>
                <td>@car.Transmission</td>
                <td>@car.FuelType</td>
                <td>@car.SeatingCapacity</td>
                <td>$@car.PricePerDay</td>
                <td>
                    @if (car.IsAvailable)
                    {
                        <span class="badge bg-success">Available</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Booked</span>
                    }
                </td>
                <td class="text-end">
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@car.CarID">View Car</a>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@car.CarID">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@car.CarID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
