@model IEnumerable<CarRentalManagement.Models.Car>
@{
    ViewData["Title"] = "Cars";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Cars</h2>
    <a class="btn btn-success" asp-action="Create">New Car</a>
</div>
<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Name</th>
            <th>Model</th>
            <th>Availability</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.CarName</td>
                <td>@car.CarModel</td>
                <td>
                    @if (car.IsAvailable)
                    {
                        <span class="badge text-bg-success">Available</span>
                    }
                    else
                    {
                        <span class="badge text-bg-danger">Booked</span>
                    }
                </td>
                <td class="text-end">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@car.CarID">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@car.CarID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>