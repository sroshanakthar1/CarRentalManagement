@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var role = HttpContextAccessor.HttpContext.Session.GetString("Role");
    var username = HttpContextAccessor.HttpContext.Session.GetString("Username");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CRMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        /* Extra polish */
        .navbar-brand {
            font-weight: 600;
            letter-spacing: 1px;
        }

        .navbar-nav .nav-link {
            padding: 0.5rem 1rem;
            transition: background 0.2s ease-in-out, color 0.2s;
        }

            .navbar-nav .nav-link:hover {
                background: rgba(255, 255, 255, 0.1);
                border-radius: 6px;
            }

        .navbar-text {
            font-weight: 500;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="bi bi-car-front-fill me-1"></i> CRMS
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav" aria-controls="nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="nav">
                <!-- Left Nav -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    @if (role == "Admin")
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Cars" asp-action="Index">Manage Cars</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Bookings" asp-action="All">All Bookings</a></li>
                    }

                    @if (role == "Customer")
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Bookings" asp-action="Create">Book a Car</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Bookings" asp-action="MyBookings">My Bookings</a></li>
                    }
                </ul>

                <!-- Right Nav -->
                <ul class="navbar-nav ms-auto">
                    @if (!string.IsNullOrEmpty(username))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i> @username
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                <li><a class="dropdown-item" asp-controller="CustomerProfile" asp-action="ViewProfile">My Profile</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">Logout</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        @* Show Login/Register for non-logged-in users or Customers *@
                        @if (string.IsNullOrEmpty(role) || role == "Customer")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container py-4">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
</body>
</html>
