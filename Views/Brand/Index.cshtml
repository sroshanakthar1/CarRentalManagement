@model List<Brand>

<div class="container">
<hr/>
@if(Model.Count() > 0)
{
     <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Established Year</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.EstablishedYear</td>
                    </tr>
                }
            </tbody>
        </table>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center  text-uppercase text-waring pt-4">No Records to show</h2>
            </div>
        </div>
    </div>
}
