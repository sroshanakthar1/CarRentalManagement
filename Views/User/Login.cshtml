@{
    ViewData["Title"] = "Customer Login";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow p-4" style="width: 350px; border-radius: 15px;">
        <h3 class="text-center mb-4" style="color:#f5c518;">Customer Login</h3>

        @* ✅ Success after registration *@
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center fw-bold">
                @TempData["Success"]
            </div>
        }

        @* ❌ Invalid login *@
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center fw-bold">
                @ViewBag.Error
            </div>
        }

        <form asp-controller="User" asp-action="Login" method="post">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" name="username" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-control" required />
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-warning text-white fw-bold">Login</button>
            </div>
        </form>

        <p class="text-center mt-3">
            Don’t have an account?
            <a asp-controller="User" asp-action="Create">Register here</a>
        </p>
    </div>
</div>

<style>
    body {
        background-color: #000;
    }

    .card {
        background-color: #1a1a1a;
        color: #fff;
    }

    .form-control {
        background-color: #2c2c2c;
        color: #fff;
        border: 1px solid #444;
    }

        .form-control:focus {
            border-color: #f5c518;
            box-shadow: 0 0 5px #f5c518;
            background-color: #2c2c2c;
            color: #fff;
        }

    .btn-warning {
        background-color: #f5c518;
        border-color: #f5c518;
    }
</style>



