@model CarRentalManagement.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<h2 class="text-danger mb-4">Delete User</h2>

<h4>Are you sure you want to delete this user?</h4>

<hr />

<dl class="row">
    <dt class="col-sm-2">User ID</dt>
    <dd class="col-sm-10">@Model.UserID</dd>

    <dt class="col-sm-2">First Name</dt>
    <dd class="col-sm-10">@Model.FirstName</dd>

    <dt class="col-sm-2">Last Name</dt>
    <dd class="col-sm-10">@Model.LastName</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.Phone</dd>

    <dt class="col-sm-2">Role</dt>
    <dd class="col-sm-10">@Model.Role</dd>
</dl>

<form asp-action="Delete" method="post">
    @* Hidden field for UserID *@
    <input type="hidden" asp-for="UserID" />

    <button type="submit" class="btn btn-danger">🗑 Delete</button>
    <a asp-action="Index" class="btn btn-secondary">⬅ Cancel</a>
</form>
