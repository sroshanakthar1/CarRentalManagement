@model IEnumerable<CarRentalManagement.Models.Booking>
@{
    ViewData["Title"] = "All Bookings";
}
<h2>All Bookings</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Car</th>
            <th>Pickup</th>
            <th>Return</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Customer!.Username</td>
                <td>@b.Car!.CarName (@b.Car.CarModel)</td>
                <td>@b.PickupDate.ToString("yyyy-MM-dd")</td>
                <td>@b.ReturnDate.ToString("yyyy-MM-dd")</td>
                <td>$@b.TotalCost</td>
            </tr>
        }
    </tbody>
</table>