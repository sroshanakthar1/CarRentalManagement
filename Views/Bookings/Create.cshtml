@{
    ViewData["Title"] = "New Booking";
    var cars = ViewBag.Cars as List<CarRentalManagement.Models.Car>;
    int? selectedCarId = ViewBag.SelectedCarId as int?;
}
<h2>New Booking</h2>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
<form asp-action="Create" method="post" class="row g-3">
    <div class="col-md-6">
        <label class="form-label">Car</label>
        <select name="carId" class="form-select" required>
            <option value="">-- Select a car --</option>
            @foreach (var c in cars!)
            {
                <option value="@c.CarID" selected="@(selectedCarId == c.CarID)">@c.CarName (@c.CarModel)</option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <label class="form-label">Pickup Date</label>
        <input type="date" name="pickupDate" class="form-control" required />
    </div>
    <div class="col-md-3">
        <label class="form-label">Return Date</label>
        <input type="date" name="returnDate" class="form-control" required />
    </div>
    <div class="col-12">
        <button class="btn btn-primary" type="submit">Confirm Booking</button>
    </div>
</form>