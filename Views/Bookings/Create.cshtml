@model CarRentalManagement.Models.BookingViewModel

@{
    ViewData["Title"] = "New Booking";
}

<h2>New Booking</h2>

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="CarID" />

    <div class="mb-3">
        <label asp-for="PickupDate" class="form-label"></label>
        <input asp-for="PickupDate" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="ReturnDate" class="form-label"></label>
        <input asp-for="ReturnDate" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="TotalCost" class="form-label"></label>
        <input asp-for="TotalCost" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Confirm Booking</button>
</form>
