@model IEnumerable<CarRentalManagement.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<h2>My Bookings</h2>

@if (!Model.Any())
{
    <p>No bookings yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Car</th>
                <th>Pickup Date</th>
                <th>Return Date</th>
                <th>Total Cost</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.Car?.CarName (@booking.Car?.CarModel)</td>
                    <td>@booking.PickupDate.ToShortDateString()</td>
                    <td>@booking.ReturnDate.ToShortDateString()</td>
                    <td>@booking.TotalCost.ToString("C")</td>
                    <td>
                        @(booking.Car?.IsAvailable == false ? "Booked" : "Available")
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
